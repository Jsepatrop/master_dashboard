# Master Dashboard Environment Configuration

# Backend Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Master Dashboard API
LOG_LEVEL=INFO
ENVIRONMENT=production

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,https://localhost:3000

# Database Configuration (Optional)
DATABASE_URL=postgresql://dashboard:dashboard_password@postgres:5432/master_dashboard
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-secret-key-change-in-production

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=100

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Simulator Configuration
BACKEND_URL=ws://backend:8000/ws/data
UPDATE_INTERVAL=5

# Nginx Configuration
NGINX_HOST=localhost
NGINX_PORT=80

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Performance Tuning
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# Docker Configuration
COMPOSE_PROJECT_NAME=master-dashboard
RESTART_POLICY=unless-stopped