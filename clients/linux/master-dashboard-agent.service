[Unit]
Description=Master Dashboard Agent
Documentation=https://github.com/master-dashboard/agent
After=network.target

[Service]
Type=simple
User=dashboard
Group=dashboard
WorkingDirectory=/opt/master-dashboard-agent
Environment=PATH=/opt/master-dashboard-agent/venv/bin
ExecStart=/opt/master-dashboard-agent/venv/bin/python /opt/master-dashboard-agent/agent.py
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=master-dashboard-agent

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/master-dashboard-agent /var/log
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

[Install]
WantedBy=multi-user.target