{
  "server": {
    "url": "http://localhost:8000",
    "api_key": null,
    "timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 5
  },
  "collection_interval": 5,
  "machine": {
    "name": null,
    "type": "server",
    "location": "datacenter",
    "tags": ["linux", "production"]
  },
  "metrics": {
    "cpu": {
      "enabled": true,
      "collect_per_core": true,
      "collect_temperature": true
    },
    "memory": {
      "enabled": true,
      "collect_swap": true
    },
    "disk": {
      "enabled": true,
      "collect_io": true,
      "exclude_filesystems": ["tmpfs", "devtmpfs", "squashfs"]
    },
    "network": {
      "enabled": true,
      "collect_bandwidth": true,
      "exclude_interfaces": ["lo", "docker0"]
    }
  },
  "logging": {
    "level": "INFO",
    "file": "/var/log/master-dashboard-agent.log",
    "max_size": "10MB",
    "backup_count": 5
  },
  "security": {
    "enable_ssl_verify": true,
    "certificate_path": null
  }
}